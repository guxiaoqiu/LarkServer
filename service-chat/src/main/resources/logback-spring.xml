<?xml version="1.0" encoding="UTF-8" ?>

<configuration>
    <!-- 读取springboot工程的properties配置文件logpath属性 作为日志的存放目录 -->
    <!--<springProperty scope="context" name="logPath" source="logpath" defaultValue="C:/service_chat_log/"/>-->
    <!-- 开发时候console输出 -->
    <appender name="consoleLog" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>
                %d - %msg%n
            </pattern>
        </layout>
    </appender>
    <!-- 专门用来存放sql语句打印的日志-->
    <appender name="sqlLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <!--
            <onMatch> ACCEPT</onMatch>
            <onMismatch> DENY</onMismatch>
            -->
        </filter>
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
        <!--滚动策略 每天一份-->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--路径-->
            <fileNamePattern>service-chat/logs/sql/sql.%d.log</fileNamePattern>
        </rollingPolicy>
    </appender>
    <!-- 记录info日志-->
    <appender name="infoLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <!--
            <onMatch> ACCEPT</onMatch>
            <onMismatch> DENY</onMismatch>
            -->
        </filter>
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
        <!--滚动策略  每天一份-->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--路径-->
            <fileNamePattern>service-chat/logs/info/info.%d.log</fileNamePattern>
        </rollingPolicy>
    </appender>
    <!-- 记录error日志 -->
    <appender name="errorLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
            <!--
            <onMatch> ACCEPT</onMatch>
            <onMismatch> DENY</onMismatch>
            -->
        </filter>
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
        <!--滚动策略  每天一份-->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--路径-->
            <fileNamePattern>service-chat/logs/error/error.%d.log</fileNamePattern>
        </rollingPolicy>
    </appender>
    <!-- 打印mybaits的sql，并存放到专门的日志里 级别必须是debug additivity=false不在向上传递，以免造成日志重复打印-->
    <logger name="com.workhub.z.servicechat.dao" level="debug" additivity="false">
        <appender-ref ref="sqlLog" />
    </logger>
    <!-- 为了方便开发调试，输出mybaits的sql到控制台 级别必须是debug additivity=false不在向上传递-->
    <logger name="com.workhub.z.servicechat.dao" level="debug" additivity="false">
        <appender-ref ref="consoleLog" />
        <appender-ref ref="infoLog" />
    </logger>
    <!-- root 的日志级别如果改成debug会有很多程序内部日志信息，所以这里写为INFO-->
    <root level="info">
        <appender-ref ref="consoleLog" />
        <appender-ref ref="infoLog" />
        <appender-ref ref="errorLog" />
    </root>

</configuration>
